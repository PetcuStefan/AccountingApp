<Window x:Class="AccountingApp.Views.ReportDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Report Details"
        Height="250" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Report Details" FontSize="18" FontWeight="Bold" Margin="0 0 0 10"/>

            <TextBlock Text="{Binding id, StringFormat=ID: {0}}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding value, StringFormat=Value: {0}}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding date, StringFormat=Date: {0}}" Margin="0 0 0 5"/>
            <TextBlock Text="{Binding path, StringFormat=File: {0}}" Margin="0 0 0 10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 10 0 0">
                <Button Content="Download Scan" Width="120" Margin="0 0 10 0" Click="Download_Click"/>
                <Button Content="Delete Entry" Width="120" Background="#F44336" Foreground="White" Click="Delete_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
