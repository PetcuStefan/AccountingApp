<Window x:Class="AccountingApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:AccountingApp.ViewModels"
        Title="AccountingApp - Reports"
        Height="550" Width="950"
        Background="#fafafa"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Shared DataGrid styling -->
        <Style TargetType="DataGrid" x:Key="BaseDataGridStyle">
            <Setter Property="BorderBrush" Value="#ccc"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#f5f5f5"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RowHeight" Value="30"/>
            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Setter Property="Padding" Value="5,2"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#e3f2fd"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Cost table theme -->
        <Style TargetType="DataGrid" x:Key="CostDataGridStyle" BasedOn="{StaticResource BaseDataGridStyle}">
            <Setter Property="BorderBrush" Value="#ef9a9a"/>
        </Style>

        <!-- Revenue table theme -->
        <Style TargetType="DataGrid" x:Key="RevenueDataGridStyle" BasedOn="{StaticResource BaseDataGridStyle}">
            <Setter Property="BorderBrush" Value="#a5d6a7"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Raportări"
                   FontSize="26"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- Two-column layout -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <!-- spacer -->
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COSTS -->
            <StackPanel Grid.Column="0">
                <TextBlock Text="Costs"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#b71c1c"
                           Margin="0,0,0,10"/>
                <DataGrid ItemsSource="{Binding Costs}"
                          Style="{StaticResource CostDataGridStyle}"
                          AutoGenerateColumns="False"
                          Height="300"
                          MouseDoubleClick="CostGrid_DoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                        <DataGridTextColumn Header="Value" Binding="{Binding value}" Width="*"/>
                        <DataGridTextColumn Header="Path" Binding="{Binding path}" Width="2*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding date}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="Add Cost"
                        Margin="0,10,0,0"
                        Background="#e57373"
                        Foreground="White"
                        Padding="8"
                        FontWeight="Bold"
                        Command="{Binding AddCostCommand}"
                        Cursor="Hand"/>
            </StackPanel>

            <!-- REVENUES -->
            <StackPanel Grid.Column="2">
                <TextBlock Text="Revenues"
                           FontSize="18"
                           FontWeight="SemiBold"
                           Foreground="#1b5e20"
                           Margin="0,0,0,10"/>
                <DataGrid ItemsSource="{Binding Revenues}"
                          Style="{StaticResource RevenueDataGridStyle}"
                          AutoGenerateColumns="False"
                          Height="300"
                          MouseDoubleClick="RevenueGrid_DoubleClick">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding id}" Width="Auto"/>
                        <DataGridTextColumn Header="Value" Binding="{Binding value}" Width="*"/>
                        <DataGridTextColumn Header="Path" Binding="{Binding path}" Width="2*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding date}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>

                <Button Content="Add Revenue"
                        Margin="0,10,0,0"
                        Background="#81c784"
                        Foreground="White"
                        Padding="8"
                        FontWeight="Bold"
                        Command="{Binding AddRevenueCommand}"
                        Cursor="Hand"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
