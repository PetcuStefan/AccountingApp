<Window x:Class="AccountingApp.Views.AddReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Report"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Value -->
            <RowDefinition Height="Auto"/>
            <!-- Date -->
            <RowDefinition Height="Auto"/>
            <!-- Drop Zone -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Value -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Value:" Width="100" VerticalAlignment="Center"/>
            <TextBox x:Name="ValueBox" Width="200"/>
        </StackPanel>

        <!-- Date -->
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0 0 0 10">
            <TextBlock Text="Date:" Width="100" VerticalAlignment="Center"/>
            <DatePicker x:Name="DatePicker" Width="200"/>
        </StackPanel>

        <!-- File Drop Zone (under Date) -->
        <Border Grid.Row="2"
                Margin="0 10 0 10"
                CornerRadius="8"
                BorderBrush="#4CAF50"
                BorderThickness="2"
                Background="#F0FFF4"
                AllowDrop="True"
                DragEnter="FileDropZone_DragEnter"
                DragLeave="FileDropZone_DragLeave"
                Drop="FileDropZone_Drop"
                Padding="20"
                x:Name="FileDropZone">

            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Drop a JPG, PNG, or PDF file here" 
                           FontSize="14" 
                           Foreground="#444"
                           HorizontalAlignment="Center"/>
                <TextBlock x:Name="FileNameText"
                           Text="No file selected"
                           FontStyle="Italic"
                           Foreground="#888"
                           Margin="0 5 0 0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Content="Save" Height="30" Width="100" Margin="0 0 10 0" Click="Save_Click"/>
            <Button Content="Cancel" Height="30" Width="100" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
